   "source": [
    "# GitHub Repository Analysis using GitHub Search API\n",
    "# =====================================================\n",
    "# This script:\n",
    "# 1. Fetches repository data from GitHub API (JSON)\n",
    "# 2. Extracts key fields\n",
    "# 3. Cleans and sorts data\n",
    "# 4. Performs simple analysis\n",
    "# 5. Saves results to CSV"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 48,
   "id": "5b6de300",
   "metadata": {},
   "outputs": [],
   "source": [
    "import requests\n",
    "import pandas as pd \n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 49,
   "id": "66cd63ff",
   "metadata": {},
   "outputs": [],
   "source": [
    "# 1. API Configuration\n",
    "# =====================================================\n",
    "URL = \"https://api.github.com/search/repositories\"\n",
    "\n",
    "params = {\n",
    "    \"q\": \"language:python stars:>5000\",\n",
    "    \"sort\": \"stars\",\n",
    "    \"order\": \"desc\",\n",
    "    \"per_page\": 20\n",
    "}\n",
    "\n",
    "headers = {\n",
    "    \"User-Agent\": \"Mozilla/5.0\"\n",
    "}"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 70,
   "id": "a1d05f52",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "dict_keys(['total_count', 'incomplete_results', 'items'])\n"
     ]
    }
   ],
   "source": [
    "# 2. Send API Request\n",
    "# =====================================================\n",
    "response = requests.get(URL, params=params, headers=headers)\n",
    "\n",
    "if response.status_code != 200:\n",
    "    print(\"Request failed:\", response.status_code),
         print(response.text),   
         raise SystemExit,
    "\n",
    "    \n",
    "data = response.json()\n",
    "keys = data.keys()\n",
    "print(keys)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 54,
   "id": "93cd3400",
   "metadata": {},
   "outputs": [],
   "source": [
    "# 3. Extract Repository Data\n",
    "# =====================================================\n",
    "items = data[\"items\"]\n",
    "\n",
    "\n",
    "repo_names = []\n",
    "stars = []\n",
    "languages = []\n",
    "urls = []\n",
    "\n",
    "for repo in items:\n",
    "    name = repo.get(\"full_name\")\n",
    "    star_count = repo.get(\"stargazers_count\")\n",
    "    language = repo.get(\"language\")\n",
    "    url = repo.get(\"html_url\")\n",
    "\n",
    "\n",
    "    repo_names.append(name)\n",
    "    stars.append(star_count)\n",
    "    languages.append(language)\n",
    "    urls.append(url)\n"
   ]
  },
