   "source": [
    "# 7. Simple Analysis (Beginner-Friendly)\n",
    "# =====================================================\n",
    "\n",
    "# 7.1 Count repositories by programming language\n",
    "language_count = df_sorted[\"Language\"].value_counts()\n",
    "\n",
    "print(\"\\nNumber of repositories by language:\")\n",
    "print(language_count)\n",
    "\n",
    "\n",
    "\n",
    "# 7.2 Group data by language\n",
    "grouped_by_language = df_sorted.groupby(\"Language\")\n",
    "\n",
    "\n",
    "\n",
    "# 7.3 Calculate average stars for each language\n",
    "average_stars = grouped_by_language[\"Stars\"].mean()\n",
    "\n",
    "print(\"\\nAverage stars by language:\")\n",
    "print(average_stars)\n",
    "\n",
    "\n",
    "\n",
    "# 7.4 Combine count and average into a summary table\n",
    "summary_df = pd.DataFrame({\n",
    "    \"Repo_Count\": language_count,\n",
    "    \"Average_Stars\": average_stars\n",
    "}).reset_index()\n",
    "\n",
    "print(\"\\nSummary table:\")\n",
    "summary_df\n"
   ]
